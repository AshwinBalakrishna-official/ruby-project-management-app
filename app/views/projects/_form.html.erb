<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    
    <%= form.text_field :project_name,class:"form-control",placeholder:"Project Name" %>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :client_name,class:"form-control",placeholder:"Client Name" %>
  </div>

  <div class="field form-group">
    <%= form.label :Start_Date %>
    <%= form.date_select :start_date,class:"form-control",placeholder:"Start Date" %>
  </div>

  <div class="field form-group">
  <%= form.label :End_Date %>
    <%= form.date_select :end_date,class:"form-control",placeholder:"End Date" %>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :client_phone_number,class:"form-control",placeholder:"Phone Number" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :client_email,class:"form-control",placeholder:"E-mail" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
